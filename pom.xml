<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.loobo</groupId>
    <artifactId>storm-hello-world</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Archetype - storm-hello-world</name>
    <url>http://maven.apache.org</url>


    <profiles>
        <profile>
            <id>intellij</id>
            <properties>
                <provided.scope>compile</provided.scope>
            </properties>
        </profile>
    </profiles>

    <dependencies>
    <dependency>
        <groupId>org.apache.storm</groupId>
        <artifactId>storm-core</artifactId>
        <version>1.0.5</version>
        <!--
          Use "provided" scope to keep storm out of the jar-with-dependencies
          For IntelliJ dev, intellij will load properly.
        -->
    </dependency>
    </dependencies>
</project>
